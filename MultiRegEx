
//MultiRegEx RC4 "Bernie"

function check(raw) {

// RegEx
var email = /^[\w-\.]+@([\w-]+\.)+[\w-]+$/.test(raw);
var phone = /^[^\D]+$/.test(raw);
var hostname = /^(?:www|https\:|http\:|\w)(.*).[A-Za-z0-9_]+.[A-Za-z]+$/.test(raw);

// Debugging
// console.log(email);
// console.log(phone);
// console.log(hostname);

// Pr√ºfen von Treffern
if (email){
    return 0 
}else if(phone){
    return 1
}else if(hostname){
    return 2
}else{
    return false
}
}
  
var raw = '491523456781235';    // Input im Eingabefeld
console.log(raw);
result = check(raw); // Erkannte Eingabe: 0: Email; 1: Phone; 2: Hostname
console.log(result);

//Weiterverwendung vom Ergebnis
switch(result){
case 0:
console.log("email");
break;
case 1:
console.log("phone");
break;
case 2:
console.log("hostname");
break;
}

